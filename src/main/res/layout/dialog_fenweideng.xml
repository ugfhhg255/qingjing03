<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_fan_pxeed.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1500px"
    android:layout_height="800px"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/light_gray_blue"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="氛围灯"
        android:textColor="@color/black"
        android:textSize="50px"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/tuijianyanse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐颜色"
        android:layout_marginLeft="120px"
        android:textColor="@color/black"
        android:textSize="30px"
        />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/yanse01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:padding="16px"
        android:layout_marginLeft="150px"
        android:layout_marginTop="10px">

        <ImageView
            android:id="@+id/fenweidengbai"
            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/baise945j" />

        <ImageView
            android:id="@+id/fenweidenglv"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/lvse845j" />

        <ImageView
            android:id="@+id/fenweidengqing"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/lanse355f" />

        <ImageView
            android:id="@+id/fenweidenglan"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/shenlan34tf" />

        <ImageView
            android:id="@+id/fenweidengzi"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/zise342f" />

        <ImageView
            android:id="@+id/fenweidenghuang"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/huangse34ggw" />

        <ImageView
            android:id="@+id/fenweidenghong"

            android:layout_width="99px"
            android:layout_height="99px"
            android:layout_marginRight="70px"
            android:src="@drawable/hongse5ijedw" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yanse02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="80px"
        android:layout_marginTop="50px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginRight="80px"
            >
            <TextView
                android:id="@+id/yanseooo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色"
                android:layout_marginLeft="40px"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_marginRight="600px"
                />
        </LinearLayout>



        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="800px"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:progress="50"
            android:layout_marginLeft="100px"
            android:progressDrawable="@drawable/projess"
            android:thumb="@drawable/huakuaiaaa"
            android:thumbOffset="0dp" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginRight="80px"
            >
        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:background="@drawable/rounded_rectangle_bg"
        android:padding="16px"
        android:layout_marginLeft="150px"
        android:layout_marginTop="50px">

        <ImageView
            android:id="@+id/yinyuelvdong35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:layout_marginRight="80px"
            android:src="@drawable/anniuaaa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="音乐律动 \n 开启后，氛围灯亮度，氛围灯颜色，推荐颜色置灰不可操作。"
            android:textColor="@color/black"
            android:textSize="30px"
            android:layout_marginRight="80px"
            />

    </LinearLayout>



</LinearLayout>