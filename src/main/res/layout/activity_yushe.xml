<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/asenlin"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Yushe">

    <ImageView
        android:id="@+id/shezhi56fd"
        android:layout_width="55px"
        android:layout_gravity="right|top"
        android:layout_marginTop="100px"
        android:layout_marginRight="80px"
        android:background="@drawable/shezhi53fe"
        android:layout_height="50px">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/yushefanhui"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/fanhuibaise5646"
            android:layout_gravity="left"
            android:layout_marginLeft="100px"
            android:layout_marginTop="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小憩模式"
            android:textColor="@color/white"
            android:textSize="40px"
            android:layout_marginLeft="40px"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp">


        <NumberPicker
            android:id="@+id/time_picker"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:theme="@style/NumberPickerWhiteText"
            android:padding="10dp"/>  <!-- 添加内边距 -->
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40px">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="睡眠时间"
            android:layout_marginTop="20px"
            android:textSize="50px"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowRadius="5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#D3D3D3"> <!-- 浅灰色背景 -->

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/yushekaiqi"
        android:layout_width="450px"
        android:layout_height="100px"
        android:text="开启"
        android:textSize="50px"
        android:textColor="#000000"
        android:background="@drawable/kaiqi87434d"
        android:layout_gravity="center"
        android:layout_marginTop="40px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px">

            <ImageView
    android:id="@+id/senlin34"
    android:layout_width="400px"
    android:layout_height="300px"
    android:background="@drawable/rounded_corner"
    android:padding="1dp"
    android:scaleType="centerCrop"
    android:clipToOutline="true"
    android:foreground="@drawable/image_selector"
    android:layout_marginRight="70px" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7px">

            <ImageView
                android:id="@+id/yutian346"
                android:layout_width="400px"
                android:layout_height="300px"
                android:background="@drawable/yutian9hj434"
                android:scaleType="centerCrop"
                android:foreground="@drawable/image_selector"
                android:layout_marginRight="70px"

                 />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px">

            <ImageView
                android:id="@+id/xiayeji45"
                android:layout_width="400px"
                android:layout_height="300px"
                android:background="@drawable/xiaye9845"
                android:scaleType="centerCrop"
                android:foreground="@drawable/image_selector"
                android:layout_marginRight="70px"

                />


        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px">

            <ImageView
                android:id="@+id/gaoyuan9jgr"
                android:layout_width="400px"
                android:layout_height="300px"
                android:background="@drawable/gaoyuan9845dd"
                android:scaleType="centerCrop"
                android:foreground="@drawable/image_selector"
                android:layout_marginRight="70px"

                />


        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8px">

            <ImageView
                android:id="@+id/haitan945"
                android:layout_width="400px"
                android:layout_height="300px"
                android:background="@drawable/haitan845kd"
                android:scaleType="centerCrop"
                android:foreground="@drawable/image_selector"
                android:layout_marginRight="70px"
                />
        </FrameLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="森林"
            android:textSize="50px"
            android:layout_marginLeft="180px"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雨天"
            android:textSize="50px"
            android:layout_marginLeft="400px"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夏夜"
            android:textSize="50px"
            android:layout_marginLeft="400px"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高原"
            android:textSize="50px"
            android:layout_marginLeft="400px"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海滩"
            android:textSize="50px"
            android:layout_marginLeft="400px"
            android:textColor="@color/white"/>
    </LinearLayout>




</LinearLayout>